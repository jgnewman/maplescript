(import './extrafile')
(import '../../syrup/syrup' syrup)

# Create a standard maplescript custom element
(element TitleElem [attrs children]
  <h1>
    'work!'
  </h1>
)

# Convert our element into a component and add
# lifecycle hooks
(make TitleComponent
  (-> (syrup:component TitleElem)
      (syrup:afterMount @ (fn [attrs] (m:log 'aftermount' attrs)))
      (syrup:beforeUnmount @ (fn [attrs] (m:log 'beforemount' attrs)))))

(make initialState (syrup:state {:stateVal 'foo'}))

# Render our component into the DOM
(syrup:render TitleComponent initialState '#app')
