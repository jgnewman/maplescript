(make factorial [n]
  (if
    (lt n 2) 1
    (* n (factorial (- n 1)))))

(make factorial
  (of [1] 1)
  (of [n] (* n (factorial (- n 1)))))

(make apply [[head|tail]]
  (head.apply tail))

